@import '../../style/base.wxss';

.container {
  display: flex;
  padding: 24rpx;
}

.content {
  margin-left: 12rpx;
  width: 100%;
}

image.icon {
  min-width: 48rpx;
  min-height: 48rpx;
}

.footer {
  margin: 12rpx 0 0 0;
  display: flex;
  font-size: 24rpx;
  line-height: 48rpx;
  color: #b8b8b8;
  width: 100%;
}

.repo {
  display: block;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.time, .unsub, .mark {
  margin-left: 24rpx;
}